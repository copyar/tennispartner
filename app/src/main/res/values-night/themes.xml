<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="LauncherTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/bordeaux</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_icon_night</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.TennisPartner</item>
    </style>
    <style name="Theme.TennisPartner" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/dark_purple</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/bordeaux</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowNoTitle">true</item>
        <!--We will be using the toolbar so no need to show ActionBar-->
        <item name="android:windowActionBar">false</item>
    </style>
</resources>